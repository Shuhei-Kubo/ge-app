.AccountPage
  .AccountPage__title
    %h2 Edit Account
    %h5 アカウントの編集
    = link_to "ログアウト", '#', class: 'Button'
    = link_to "マイページに戻る", :back, class: 'Button'
  .AccountPage__form
    = form_for(current_user) do |f|
      .FormField
        .FormField__label--normal
          = f.label :プロフィール画像
        .FormField__input--normal
          = f.file_field :profile_image, class: 'account_profile_image', id: 'upload-icon'
      .user_name
        = current_user.nickname
      .FormField
        .FormField__label--normal
          = f.label :ニックネーム
        .FormField__input--normal
          = f.text_field :nickname, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :メールアドレス
        .FormField__input--normal
          = f.email_field :email
      .FormField
        .FormField__label--normal
          = f.label :自己紹介
        .FormField__profile__text
          = f.text_area :profile_text, autofocus: true, maxlength: "150"
      
      = f.submit "Update", class: 'Button UserButton'